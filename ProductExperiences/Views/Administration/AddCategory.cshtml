@model AddCategoryViewModel

@{
    ViewData["Title"] = "Add new category";
}

<h2>Add new category</h2>

<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName">Category name</label>
                <input asp-for="CategoryName" class="form-control" placeholder="Category name" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>


            <button type="submit" class="btn btn-primary">Add category</button>
            <a asp-controller="Administration" asp-action="ListCategories" class="btn btn-info">Back</a>
        </form>
    </div>
</div>