@model IEnumerable<Category>

@{
    ViewData["Title"] = "All categories";
}

<h2>All categories of products</h2>

<hr />

@if (Model.Any())
{
    <a asp-action="AddCategory" asp-controller="Administration"
       class="btn btn-primary" style="margin-bottom:21px;">
        Add new category
    </a>


    <div id="list">
        @foreach (var category in Model)
        {

            <div class="thumbnail mb-2" style=" max-width:400px;">

                <div class="card-header">
                    <h3>@category.CategoryName</h3>
                </div>

                <div class="card-footer">                   
                    <a asp-controller="Administration" asp-action="EditCategory"
                        asp-route-categoryID="@category.CategoryID" class="btn btn-warning">Edit</a>                      
                </div>
            </div>

        }
    </div>

}

else
{
    <div class="card">
        <div class="card-header">
            List of users is empty
        </div>

        <div class="card-body">
            <a class="btn btn-primary" asp-controller="Account" asp-action="Register">
                Register new user
            </a>
        </div>
    </div>

}