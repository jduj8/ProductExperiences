@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "All roles";
}

<h2>All roles</h2>

<hr/>

@if (Model.Any())
{
    foreach (var role in Model)
    {
        <a class="btn btn-primary" asp-action="CreateRole" asp-controller="administration">Add new role</a>

        <div class="card table-bordered" style="margin-top:5px; margin-bottom:5px; padding:5px; ">
            <div class="card-header">
                Role id: @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a asp-controller="Administration"
                   asp-action="EditRole"
                   asp-route-id="@role.Id"
                   class="btn btn-primary">
                    Edit
                </a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>

    }

}

else
{
    <div class="thumbnail">
        <div class="panel-heading">
            No roles created yet
        </div>

        <div class="panel-body">
            <h5 class="card-title">Use the button below to create a role</h5>
            <a class="btn btn-primary"
               style="width:auto"
               asp-controller="Administration"
               asp-action="CreateRole">
                Create role
            </a>
        </div>
    </div>
}