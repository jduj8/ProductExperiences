@model IEnumerable<IdentityUser>

@{
    ViewData["Title"] = "All users";
}

<h2>All app users</h2>

<hr />

@if (Model.Any())
{
    <a asp-action="Register" asp-controller="Account"
       class="btn btn-primary" style="margin-bottom:10px;">Register new user</a>
    foreach (var user in Model)
    {
        <div class="thumbnail mb-2">
            <div class="card-header">
                User Id: @user.Id
            </div>

            <div class="card-body">
                <h5 class="text-info">@user.UserName</h5>
            </div>

            <div class="card-footer">
                <form method="post" asp-action="DeleteUser" asp-route-id="@user.Id">
                    <a asp-controller="Administration" asp-action="Edituser"
                       asp-route-id="@user.Id" class="btn btn-primary">Edit</a>

                    <span id="confirmDeleteSpan_@user.Id" style="display:none">
                        <span>Are you sure you want to delete user?</span>
                        <button type="submit" class="btn btn-danger">Yes</button>
                        <a href="#" class="btn btn-primary"
                           onclick="confirmDelete('@user.Id', false)">No</a>
                    </span>

                    <span id="deleteSpan_@user.Id">
                        <a href="#" class="btn btn-danger"
                           onclick="confirmDelete('@user.Id', true)">Delete</a>
                    </span>
                </form>
            </div>
        </div>

    }

}

else
{
    <div class="card">
        <div class="card-header">
            List of users is empty
        </div>

        <div class="card-body">
            <a class="btn btn-primary" asp-controller="Account" asp-action="Register">
                Register new user
            </a>
        </div>
    </div>

}

@section Scripts {
    <script src="~/js/ConfirmDelete.js"></script>
}
