@model ExperienceCreateViewModel

@{ 
    ViewData["Title"] = "Create experience";
}

<h2>Podijeli svoje iskustvo s određenim proizvodom</h2>
<hr />

<form enctype="multipart/form-data" asp-controller="experience" asp-action="create" method="post" class="mt-3" style="margin:31px;">
    <div class="form-group row">
        <label asp-for="ProductName" class="col-sm-2 col-form-label">Naziv proizvoda:</label>
        <div class="col-sm-10">
            <input id="inProName" asp-for="ProductName" class="form-control" placeholder="Naziv">
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="CategoryID" class="col-sm-2 col-form-label">Kategorija:</label>
        <div class="col-sm-10">
            <select asp-for="CategoryID" id="ddlCategory" class="btn btn-default"
                    asp-items="@(new SelectList(@ViewBag.Categories,"CategoryID", "CategoryName"))">
                <option value="">Odaberi</option>
            </select>
            <span asp-validation-for="CategoryID" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Evaluation" class="col-sm-2 col-form-label">Ocjena proizvoda:</label>
        <div class="col-sm-10">
            <input asp-for="Evaluation" class="form-control" placeholder="Ocjena 1-10">
            <span asp-validation-for="Evaluation" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Describe" class="col-sm-2 col-form-label">Moj dojam o proizvodu:</label>
        <div class="col-sm-10">
            <textarea asp-for="Describe" class="form-control z-depth-1" id="exampleFormControlTextarea6" rows="3" placeholder="Podijeli svoje iskustvo..."></textarea>
            <span asp-validation-for="Describe" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Recommendation" class="col-sm-2 col-form-label">Preporuka:</label>
        <div class="col-sm-10">
            <select asp-for="Recommendation" class="btn btn-default"
                    asp-items="Html.GetEnumSelectList<Recommendation>()">
                <option value="">Odaberi</option>
            </select>
            <span asp-validation-for="Recommendation" class="text-danger"></span>
        </div>
    </div>

    <hr />
    <div class="form-group row">

        <div class="text-center">
            <div class="fileUpload btn btn-default">
                <span>Učitaj sliku proizvoda</span>
                <input id="uploadBtn" asp-for="Photo" accept=".png,.jpg,.jpeg,.gif" asp- type="file" class="upload" />
            </div>
            <input id="uploadFile" class="form-control" style="max-width:40%;margin-left:30%;" placeholder="Odabrana slika" disabled="disabled" />
        </div>
    </div>
    <hr />
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Kreiraj iskustvo</button>
        </div>
    </div>

</form>

@section Scripts{ 
<script>
    document.getElementById("uploadBtn").onchange = function () {
        document.getElementById("uploadFile").value = this.value.split("\\").pop();
    };
        
</script>

}



