@model IEnumerable<Experience>

@{
    ViewData["Title"] = "My experience list";
}

<h2>Moja iskustva</h2>

<hr />

<div class="row">

    @if (Model.Count() == 0)
    {


        <div style="padding:15px;">
            <p style="font-size:large; font-family:'Bookman Old Style';">Trenutno nemate podijeljenih iskustva, želite li kreirati novo iskustvo?</p>
            <a class="btn btn-primary"
               asp-controller="Experience"
               asp-action="Create"
            >
                Podijeli svoje iskustvo
            </a>
        </div>

    }

    @{
        foreach (var experience in Model)
        {
            @Html.Partial("MyExperiencesSummary", experience)
        }
    }
</div>

    
