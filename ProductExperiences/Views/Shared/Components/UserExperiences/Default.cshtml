@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@inject SignInManager<IdentityUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a asp-controller="Experience" asp-action="MyList">
            <img alt="Moja podijeljena iskustva" src="~/images/shareIcon.png" style="max-width:21px;max-height:21px;" />
            <span id="cart-status">
                @ViewBag.Count
            </span>
        </a>
    </li>
}

