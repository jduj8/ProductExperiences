@model Experience

@{
    var photoPath = "";
    if (Model.PhotoPath != null)
    {
        photoPath = "~/images/products/" + (Model.PhotoPath ?? "noImage.png");
    }

    else
    {
        photoPath = "~/images/products/noImage.png";
    }
    var productName = "";
    if (Model.Product.ProductName.Length > 30)
    {
        productName = Model.Product.ProductName.Substring(0, 26) + "...";
    }

    else
    {
        productName = Model.Product.ProductName;

    }
}

<div class="col-sm-4 col-lg-4 col-md-4">

    <div class="thumbnail">
        <div class="text-center">
            <h4>@productName</h4>
        </div>

        <img style="height:150px; margin-bottom:10px;" src="~/images/products/@(Model.PhotoPath ?? "noImage.png")" class="img-responsive" alt="" />
        <div style="display:inline;" class="caption">
            <img style="display:inline;" src="~/images/star.png" alt="">
            <p style="display:inline"> @Model.Evaluation/10</p>
            <p class="pull-right" style="display:inline;font-size:smaller;">@Model.Date.ToString("dd MMM yyyy hh:mm")</p>
        </div>
        <hr />
        <div class="text-right">
            <p class="button">
                <a class="btn btn-success"
                   asp-controller="Experience"
                   asp-action="Details"
                   asp-route-experienceID="@Model.ExperienceID">
                    Detalji
                </a>
            </p>
        </div>
    </div>
</div>
